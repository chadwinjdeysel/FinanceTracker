@model Category

@{
    ViewData["Title"] = "Edit Category";
}

<form method="post"
      asp-action="Edit">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name"
               type="text"
               class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description"
                  class="form-control">
        </textarea>
    </div>

    <div class="form-group">
        <label asp-for="ColorCode"></label>
        <input asp-for="ColorCode"
               type="color"
               class="form-control" />
    </div>

    <button type="submit"
            class="btn btn-primary">
        Edit Category
    </button>
</form>